Spacewar.matchmakingState = function(game) {
	var modoJuego;
	var nP;
}

Spacewar.matchmakingState.prototype = {
		init: function(n, nP) {
		if (game.global.DEBUG_MODE) {
			console.log("[DEBUG] Entering **MATCHMAKING** state");
			console.log("Modo de juego elegido: " + name);
		}
		modoJuego = n;
		numJugadores = nP;
	},

	preload : function() {
		var background = game.load.image('background','assets/images/matchmakingWallpaper.jpg');
		game.load.image('buttonStart','assets/images/buttonStart.png');
		
	},

	create : function() {
		background = game.add.tileSprite(0, 0, 1200, 800, 'background');
		background.scale.setTo(1.7, 1.5);
		var buttonPlay = game.add.button(game.world.centerX - 85, 400, 'buttonStart', jugar, this, 2, 1, 0);
		buttonPlay.scale.setTo(0.5, 0.5);
		
		if (modoJuego === 'classic') {
			game.add.text(500, 80, 'Classic Mode', {
				font : '18px Arial',
				fill : '#000000'
			});
		}
		if (modoJuego == "battleRoyale") {
			game.add.text(355, 40, 'Battle Royale Mode', {
				font : '18px Arial',
				fill : '#000000'
			});
		}
		
		game.add.text(355, 25, 'MATCHMAKING', {
			font : '40px Arial',
			fill : '#000000'
		});
		
		function jugar () {
			game.state.start('gameState')
		}

	},

	update : function() {
		
	}
}